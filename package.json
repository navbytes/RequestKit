{
  "name": "requestkit",
  "version": "1.0.0",
  "description": "RequestKit - A sophisticated Chrome extension for injecting custom headers on network requests using wildcard patterns, featuring an advanced Variable System with hierarchical scoping",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:ui": "vite --config vite.dev.config.ts",
    "build": "tsc && vite build && npm run post-build",
    "build:dev": "vite build --config vite.dev.config.ts",
    "post-build": "cp manifest.json dist/ && cp rules.json dist/ && cp -r src/assets dist/ && cp src/content/injected-script.ts dist/src/content/injected-script.js && mkdir -p dist/src/shared && cp src/shared/theme-init.js dist/src/shared/ && cp -r _locales dist/",
    "build:extension": "npm run build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@preact/signals": "^1.2.2",
    "date-fns": "^3.0.6",
    "debug": "^4.4.1",
    "lucide-preact": "^0.525.0",
    "preact": "10.19.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/preact": "^3.2.3",
    "@testing-library/user-event": "^14.5.2",
    "@types/chrome": "^0.0.258",
    "@types/debug": "^4.1.12",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^1.2.1",
    "@vitest/ui": "^1.2.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^11.0.3",
    "jsdom": "^24.1.3",
    "postcss": "^8.4.33",
    "prettier": "^3.6.2",
    "tailwindcss": "3.4.0",
    "typescript": "5.3.3",
    "vite": "5.0.10",
    "vite-plugin-web-extension": "^4.1.1",
    "vitest": "^1.2.1"
  },
  "keywords": [
    "chrome-extension",
    "headers",
    "network",
    "development",
    "testing"
  ],
  "author": "RequestKit Team",
  "license": "MIT",
  "homepage": "https://github.com/navbytes/RequestKit",
  "repository": {
    "type": "git",
    "url": "https://github.com/navbytes/RequestKit.git"
  },
  "bugs": {
    "url": "https://github.com/navbytes/RequestKit/issues"
  }
}
